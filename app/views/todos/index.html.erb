<div data-controller="todos">
  <button type="button" data-action="click->todos#loadTodos">Reload</button>
  <p id="notice"><%= notice %></p>
  <h1>Todos</h1>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Until</th>
      <th>Deleted</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody data-todos-target="list">
    </tbody>
  </table>
  <br>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
  </button>

  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" data-todos-target="name" aria-describedby="nameHelper">
            <small id="nameHelper" class="form-text text-muted" style="color:red" data-todos-target="nameHelper"></small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal" data-todos-target="closeButton">Close</button>
          <button type="button" class="btn btn-primary" data-action="click->todos#newTodo">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>